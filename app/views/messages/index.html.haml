.header
  .info_bar
    チャットグループが作成されました。
.main
  .sidebar
    .side-head
      .side-head__user-name
        ユーザー名
      %a.side-head__new-group{:href => "/groups/new"}
        %i.fa.fa-pencil-square-o
      / .side-head__new-group
      / = link_to edit_user_path(current_user) do
      /  = fa_icon 'pencil-square-o' class 'side-head__new-group'

      %a.side-head__user-edit{:href => "/users/:id/edit"}
        %i.fa.fa-cog
      / .side-head__user-edit
      /   = link_to edit_user_path(current_user) do
      /     = fa_icon 'cog', class 'icon'
    .side-body
      = render "group"
  .contents
    .content-head
      .content-head__group
        .content-head__group__name グループ名
        .content-head__group__member MEMBER:drdr hapihapi
      .content-head__edit-button edit
    .content-body
      = render "message"
    .content-foot
      .content-foot__message-form
        type a message
      .fa.fa-image
      .content-foot__send-button Send
